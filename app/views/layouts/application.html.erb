<!DOCTYPE html>
<html>
  <head>
    <title>SPDI</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
  	<!--======== header =========-->
        <header id="home">
            <div class="small-menu small-menu-2">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7 col-sm-8 col-xs-5">

                        </div> 
                        <div class="col-md-5 col-sm-4 col-xs-7">
                            <ul class="list-inline pull-right social-link">
                                <li title="Email"><i class="fa fa-paper-plane"></i><span class="hidden-sm hidden-xs">somaalipea.com </span></li>
                                <li title="Facebook"><i class="fa fa-facebook"></i></li>
                                <li title="Google+"><i class="fa fa-google-plus"></i></li>
                                <li title="Twitter"><i class="fa fa-twitter"></i></li>
                                <li title="Dribbble"><i class="fa fa-dribbble"></i></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <!-- menu 4 -->
                    <div class="navbar navbar-default default-menu menu-4" role="navigation">
                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand default-logo" href="#" style="font-size: 4rem; margin-top: 1.5rem;">SPDI</a>
                            </div>

                            <div class="collapse navbar-collapse" id="menu-4">
                                <ul class="nav navbar-nav navbar-right">
                                    <li><%= link_to "Home", root_path, class: 'scroll' %></li>
                                    <li><%= link_to "Our Profile", about_index_path, class: 'scroll' %></li>
                                    <li><a class="scroll" href="#service">Service</a></li>
                                    <li><a class="scroll" href="#team">Team</a></li>
                                    <li><a class="scroll" href="#contact">Contact</a></li>
                                    <li><%= link_to "New Post", new_pin_path, class: 'scroll' %></li>
                                    <li><%= link_to "Sign In", new_user_session_path, class: 'scroll' %></li>
                                    <li><%= link_to "Sign Out", destroy_user_session_path, class: 'scroll' %></li>
                                   
                                </ul>
                            </div>
                        </div>
                    </div><!-- end menu -->
                </div>
            </div>            
        </header>
        <!--======== end header =========-->
        
    <%= yield %>
  </body>
</html>
